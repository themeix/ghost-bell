<style>
    .c-writers-section {
        margin-top: var(--space-64);
        color: var(--color-white);
        padding: var(--space-32) 0;
    }
    .c-writers-section .c-section-heading {
        color: var(--color-text-primary);

        {{!-- font-family: var(--font-family-serif); --}}

    }
    .c-writers-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);  /* 2 columns */
        gap: var(--space-32);
    }
    .c-writer-card {
        display: flex;
        flex-direction: column;
        background-color: var(--color-background-secondary);
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: inset 0 0 0 var(--border-width) var(--color-border-secondary);
    }
    .c-writer-card__image {
        width: 100%;
        height: auto;
        aspect-ratio: 1 / 1;
        object-fit: cover;
    }
    .c-writer-card__content {
        padding: var(--space-24);
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }
    .c-writer-card__name {
        {{!-- font-family: var(--font-family-serif); --}}
        font-size: var(--font-size-scale-4);
        line-height: var(--line-height-scale-4);
        font-weight: var(--font-weight-semibold);
        margin-bottom: var(--space-8);
    }
    .c-writer-card__bio {
        {{!-- font-family: var(--font-family-sansSerif); --}}
        font-size: var(--font-size-scale-2);
        line-height: var(--line-height-scale-4);
        margin-bottom: var(--space-16);
        letter-spacing: -0.03em;
    }
    .c-writer-card__latest-post {
        {{!-- font-family: var(--font-family-sansSerif); --}}
        font-size: var(--font-size-scale-1);
        line-height: var(--line-height-scale-2);
        margin-bottom: var(--space-16);
    }
    .c-writer-card__links {
        display: flex;
        gap: var(--space-8);
        flex-wrap: wrap;
        margin-top: auto;
    }
    .c-writer-card__link {
        font-size: var(--font-size-scale-1);
        line-height: var(--line-height-scale-1);
        font-weight: var(--font-weight-medium);
        color: var(--color-white);
        text-decoration: none;
    }
    .c-writer-card__link:hover {
        text-decoration: underline;
    }

</style>

<div class="c-writers-section">
    <div class="o-grid">
        <div class="o-grid__col o-grid__col--full">
            <h2 style="font-size: 32px;" class="c-section-heading">Our Team</h2>
        </div>
    </div>
    
    <div class="o-grid c-writers-grid">
        {{log "Writers are:" @custom.homepage_writers }}
        {{#get 'authors' filter='status:active+visibility:public+slug:[{{@custom.homepage_writers}}]' limit='2' include='count.posts'}}
            {{#foreach authors}}
                <div class="c-writer-card">
                    {{#if profile_image}}
                        <img class="c-writer-card__image" src="{{profile_image}}" alt="{{name}}">
                    {{/if}}
                    <div class="c-writer-card__content">
                        <a href="/author/{{slug}}" style="text-decoration: none; transition: text-decoration 0.3s;" onmouseover="this.style.textDecoration='underline'" onmouseout="this.style.textDecoration='none'">
                            <h3 class="c-writer-card__name">{{name}}</h3>
                        </a>
                        <p class="c-writer-card__bio">{{bio}}</p>
                        
                        {{#get "posts" filter="authors:{{slug}}" limit="1" as |latest_post|}}
                            {{#if latest_post}}
                                {{#foreach latest_post}}
                                    <div class="c-writer-card__latest-post">
                                        Latest post: <a href="{{url}}" class="c-writer-card__link">{{title}}</a>
                                    </div>
                                {{/foreach}}
                            {{/if}}
                        {{/get}}
                        
                        <div class="c-writer-card__links">
                            {{#if twitter}}
                                <a href="{{twitter_url}}" class="c-writer-card__link">Twitter</a>
                            {{/if}}
                            {{#if facebook}}
                                <a href="{{facebook_url}}" class="c-writer-card__link">Facebook</a>
                            {{/if}}
                            {{#if website}}
                                <a href="{{website}}" class="c-writer-card__link">Website</a>
                            {{/if}}
                        </div>
                    </div>
                </div>
            {{/foreach}}
        {{/get}}
    </div>
</div>
